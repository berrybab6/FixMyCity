<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"


android:layout_height="match_parent"
tools:context=".LoginActivity">

<LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
>
    <TextView

            android:layout_width="wrap_content"
            android:text="Login"

            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-black"
            android:textSize="23sp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#80f00f00"
            android:textSize="21sp"
            android:id="@+id/login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/login_email"
            android:hint="Email/Phone Number"
            android:inputType="textAutoComplete"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btm_line_shape" />
    <EditText
            android:inputType="textPassword"
            android:id="@+id/login_password"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Password"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btm_line_shape" />
    <TextView

            android:layout_gravity="right"
            android:text="@string/forgot"
            android:id="@+id/forgot"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/loginpage"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Login"

            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/login_button"
            android:textAllCaps="false"
            android:layout_width="220dp"
            android:textAlignment="center"
            android:layout_height="60dp"/>
</LinearLayout>
<LinearLayout
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>
    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
    >
        <TextView
                android:layout_marginRight="7dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/create_login"
                android:text="@string/create"
                android:textColor="@color/backgroundColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginRight="7dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="or Signin with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
<!--
        <ImageButton
                android:layout_marginTop="30dp"
                android:contentDescription="twitter"
                android:id="@+id/login_tw_iv"
                android:layout_marginRight="40dp"
                android:layout_width="20dp"

                android:background="@drawable/tw"
                android:layout_height="55dp"/> -->
        <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
            android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"


                 />

        <com.google.android.gms.common.SignInButton
                android:id="@+id/google_sign_in_button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" />



</LinearLayout>
</LinearLayout>