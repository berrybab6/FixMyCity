<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        tools:context=".LoginOtherActivity">




        <TextView

                android:layout_width="wrap_content"
                android:text="Login"

                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-black"
                android:textSize="40sp"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="20dp"
                android:textColor="#80f00f00"
                android:textSize="22sp"
                android:id="@+id/login_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/login_other_email"
                android:hint="Email"
                android:inputType="textAutoComplete|textEmailAddress"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="46dp"
               android:textSize="25sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btm_line_shape" />
        <EditText
                android:inputType="textPassword"
                android:id="@+id/login_other_password"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="46dp"
               android:textSize="25sp"
                android:hint="Password"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btm_line_shape" />
        <TextView

                android:layout_gravity="right"
                android:text="@string/forgot"
                android:id="@+id/forgot_other_tv"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="19sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/login_other_btn"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Login"

                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/login_button"
                android:textAllCaps="false"
                android:layout_width="220dp"
                android:textAlignment="center"
                android:layout_height="60dp"/>
    </LinearLayout>