<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        tools:context=".user.activity.SignupActivity">
    <TextView
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="29sp"
            android:layout_marginLeft="30dp"
            android:text="Create Account"
            android:typeface="sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textStyle="bold"
            android:id="@+id/signup_error_tv"
            android:fontFamily="sans-serif-light"

            android:textColor="#fff0002f"
            android:textSize="23sp"

            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:inputType="textAutoCorrect"
            android:hint="First Name"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:id="@+id/firstname_etv"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="40dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/btm_line_shape" />
  <EditText
            android:inputType="textAutoCorrect"
            android:hint="Last Name"
            android:id="@+id/lastname_etv"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="40dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/btm_line_shape" />

    <EditText
            android:inputType="textEmailAddress"
            android:background="@null"
            android:textSize="25sp"
            android:hint="Email"
            android:id="@+id/email_signup_etv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/btm_line_shape" />
    <EditText
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:id="@+id/password_signup_etv"
            android:textSize="25sp"
            android:background="@null"

            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/btm_line_shape" />
    <EditText
            android:inputType="textPassword"
            android:textSize="25sp"
            android:hint="Confirm Password"
            android:background="@null"
            android:id="@+id/confirm_password_etv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/btm_line_shape" />
    <Button
            android:id="@+id/create_account"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Create Account"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:background="@drawable/login_button"
            android:layout_width="200dp"
            android:layout_height="60dp"/>
    <LinearLayout

            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

                android:textSize="20sp"
                android:text="Already have an Account?"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/login_create"
                android:textSize="21sp"

                android:textColor="@color/backgroundColor"
                android:text="@string/login"
                android:layout_width="63dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>