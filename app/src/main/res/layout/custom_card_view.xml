<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<androidx.cardview.widget.CardView android:layout_width="match_parent"
                                              android:layout_marginLeft="10dp"
                                              android:layout_marginTop="15dp"
                                              android:layout_marginRight="10dp"

                                              android:layout_marginBottom="20dp"
                                              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                 android:layout_marginTop="20dp"
                  android:layout_gravity="top"
                  android:paddingLeft="10dp"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title_card_tv"
                android:text="Grafitti Report"
                android:textSize="25sp"

                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:background="@drawable/offline1"
                android:layout_width="10dp"
                android:id="@+id/status_icon_tv"
                android:gravity="end"
                android:layout_marginLeft="5dp"
                android:layout_height="10dp"/>
    </LinearLayout>
<LinearLayout android:layout_width="wrap_content"
              android:id="@+id/expandable_layout_1"
              android:layout_marginTop="20dp"
              android:orientation="horizontal"
              android:layout_gravity="end"
              android:layout_height="wrap_content">
        <TextView
                android:text="3hr ago"
                android:textSize="25sp"

                android:id="@+id/hour_ago_card"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/expand_ib"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/expand_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<LinearLayout

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginRight="10dp"

                  android:layout_height="109dp">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/description_custom_tv"
                  android:textSize="19sp"
                  android:text="as dkkkkkkkkkkkkkkkkkkkk kdfjjjjjjjjjjjjjjjjjj kfjjjjjjjj"
                  android:layout_marginTop="10dp"
                  android:layout_height="100dp"/>
        <ImageView android:layout_width="90dp"
                   android:src="@drawable/br"
                   android:id="@+id/iamge_see_more"
                   android:layout_marginTop="10dp"
                   android:layout_height="100dp">

        </ImageView>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:textSize="21sp"
              android:text="Saris Abo"
              android:layout_marginTop="10dp"
              android:id="@+id/location_custom_tv"
              android:layout_height="wrap_content"/>
<LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent">

    <TextView android:layout_width="0dp"
              android:text="Not Resolved"
              android:layout_weight="1.7"
              android:id="@+id/status_resolve_tv"
              android:textSize="21sp"

              android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="end"


                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/rate_star_grey"
                android:id="@+id/star_1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView

                android:src="@drawable/rate_star_grey"
                android:id="@+id/star_2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/rate_star_grey"
                android:id="@+id/star_3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView

                android:src="@drawable/rate_star_grey"
                android:id="@+id/star_4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/rate_star_grey"
                android:id="@+id/star_5_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
        <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="See More"
                android:textColor="#FA3881B1"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>