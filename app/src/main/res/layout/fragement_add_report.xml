<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
                    android:layout_height="wrap_content">
     <EditText
        android:textIsSelectable="true"
        android:background="@null"
       android:inputType="textAutoCorrect"
    android:hint="Name"
     android:layout_marginTop="20dp"
    android:textSize="25sp"
    android:id="@+id/reportname_etv"
    android:layout_width="0dp"
        android:layout_weight="4"


    android:layout_height="30dp"/>
<Spinner android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_marginTop="20dp"
         android:layout_marginRight="10dp"
         android:id="@+id/reportname_spinner"
         android:layout_height="30dp"/>
    </LinearLayout>


    <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"

    />


    <EditText
            android:textIsSelectable="true"
            android:background="@null"
            android:inputType="textAutoCorrect"
            android:hint="Description"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:id="@+id/report_description_etv"
            android:layout_width="match_parent"



            android:layout_height="30dp"/>
    <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"

    />

    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText

                android:textIsSelectable="true"
                android:inputType="textAutoCorrect"
                android:hint="Add Report"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:id="@+id/reportlocation_etv"
                android:layout_width="0dp"
                android:layout_weight="6"

                android:background="@null"
                android:layout_height="30dp"/>

        <Spinner android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_marginTop="20dp"
                 android:layout_marginRight="10dp"
                 android:id="@+id/reportlocation_spinner"
                 android:layout_height="30dp"
                 android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"

    />

    <ImageView
           android:id="@+id/report_image_iv"
            android:src="@drawable/br"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    <Button
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/add_image_btn"
            android:text="Add Image"
            android:textAllCaps="false"
            android:background="#DDCF70"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"/>
    

    <Button
            android:id="@+id/add_report_btn"
            android:textAlignment="center"
            android:text="Add Report"
            android:textSize="20dp"

            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:background="@color/backgroundColor"
            android:layout_width="150dp"

           android:layout_marginTop="50dp"
            android:layout_height="wrap_content"/>

        </LinearLayout>
